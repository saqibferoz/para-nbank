package practice;

public class Povme {
	
	String beforeReverse = "poppop";
	String afterReverse= "";
			
	public void getValue(){
	
		System.out.println("Before reverse = "+beforeReverse);
		for(int i=beforeReverse.length()-1;i>=0;i--){
			System.out.println(beforeReverse.charAt(i));
			afterReverse =afterReverse+beforeReverse.charAt(i);
	
	}
		
		System.out.println("afterReverse= "+afterReverse);
		if(beforeReverse.equals(afterReverse)) {
			System.out.println("this is pallindrome");
			
		} else {
			System.out.println("this is not pallindrome");
		}
		
}
    

 public static void main(String[] args) {
	
	 
	 Povme obj = new Povme();
	 obj.getValue();
	
 }
 
}
